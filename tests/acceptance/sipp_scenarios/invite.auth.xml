<scenario name="Basic INVITE UAS auth responder">
  <!-- By adding rrs="true" (Record Route Sets), the route sets         -->
  <!-- are saved and used for following messages sent. Useful to test   -->
  <!-- against stateful SIP proxies/B2BUAs.                             -->
  <recv request="INVITE" crlf="true">
  </recv>

  <!-- Send 407 Authentication with nonce -->
  <send>
    <![CDATA[
      SIP/2.0 407 Proxy Authentication Required
      [last_Via:]
      [last_From:]
      [last_To:];tag=9e301c61b1bd7c9286619d6d1e9d72df.[pid]
      [last_Call-ID:]
      [last_CSeq:]
      Proxy-Authenticate: Digest realm="sip.example.com", nonce="5ad56fab0000000e131d6366e461c4ca77c0f8b1879c66bb"
      Server: SIP Proxy 2
      Content-Length: 0

    ]]>
  </send>

  <recv request="ACK"
        optional="true"
        rtd="true"
        crlf="true">
  </recv>
  <!-- SIPP does not support Proxy-Authenticate header and that's -->
  <!-- why "verifyauth" action  does not work with any SIP method -->
  <!-- but REGISTER. Here we compare pre-calculated response hash -->
  <!-- for user "alice" and password "pa55w0rd".                  -->
  <recv request="INVITE" >
    <action>
      <ereg regexp="Digest .*response=\"([[:alnum:]]*)\"" search_in="hdr" header="Proxy-Authorization:" assign_to="junk,resp" />
      <log message="Header: [$junk]" />
      <log message="Response found: [$resp]" />
      <strcmp assign_to="cmpres" variable="resp" value="81a9dc569ea6f7d8830544249d8e8e97" />
      <test assign_to="authvalid" variable="cmpres" compare="equal" value="0" />
    </action>
  </recv>

  <nop hide="true" test="authvalid" next="goodauth" />
  <nop hide="true" next="badauth" />

  <label id="goodauth" />

  <send>
    <![CDATA[

      SIP/2.0 180 Ringing
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:alice@127.0.0.1:5060>
      Content-Length: 0

    ]]>
  </send>

  <send>
    <![CDATA[

      SIP/2.0 200 OK Invite
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:alice@127.0.0.1:5060>
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=-
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0
      a=rtpmap:0 PCMU/8000

    ]]>
  </send>

  <recv request="ACK"
        optional="true"
        rtd="true"
        crlf="true">
  </recv>

  <recv request="BYE">
  </recv>

  <send next="end">
    <![CDATA[

      SIP/2.0 200 OK bye
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:alice@127.0.0.1:5060>
      Content-Length: 0

    ]]>
  </send>

  <label id="badauth" />

  <send>
    <![CDATA[
      SIP/2.0 407 Proxy Authentication Failed
      [last_Via:]
      [last_From:]
      [last_To:];tag=9e301c61b1bd7c9286619d6d1e9d72df.[pid]
      [last_Call-ID:]
      [last_CSeq:]
      Proxy-Authenticate: Digest realm="sip.example.com", nonce="5ad56fab0000000e131d6366e461c4ca77c0f8b1879c66bb"
      Server: SIP Proxy 2
      Content-Length: 0

    ]]>
  </send>

  <label id="end" />

  <!-- definition of the response time repartition table (unit is ms)   -->
  <ResponseTimeRepartition value="10, 20, 30, 40, 50, 100, 150, 200"/>

  <!-- definition of the call length repartition table (unit is ms)     -->
  <CallLengthRepartition value="10, 50, 100, 500, 1000, 5000, 10000"/>

</scenario>

